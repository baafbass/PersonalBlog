@model PersonalBlog.Entities.Dtos.HobbiesDtos.HobbiesDto

@{
    ViewBag.Title = "Delete Hobby";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Hobbies">Hobbies</a></li>
    <li class="breadcrumb-item">Delete Hobby</li>
</ol>
<hr />
<h2 class=" text-center">Delete Hobby</h2>
<hr />
<h3>Do you want to delete the selected hobby form  the Database?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>Hobby</dt>
        <dd>@Model.Hobbies.hobbies</dd>

        <dt>Is Deleted?</dt>
        <dd>@Model.Hobbies.IsDeleted</dd>

        <dt>Is Active?</dt>
        <dd>@Model.Hobbies.IsActive</dd>

        <dt>Created Time</dt>
        <dd>@Model.Hobbies.CreatedTime</dd>

        <dt>Created By</dt>
        <dd>@Model.Hobbies.CreatedByName</dd>

        <dt>Modified Time</dt>
        <dd>@Model.Hobbies.ModifiedTime</dd>

        <dt>Modified By</dt>
        <dd>@Model.Hobbies.ModifiedByName</dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="DoHardDelete" asp-controller="Hobbies" asp-area="Admin" asp-route-id="@Model.Hobbies.ID" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Hobbies" asp-area="Admin"><i class="fas fa-undo"></i> Return</a>
</div>