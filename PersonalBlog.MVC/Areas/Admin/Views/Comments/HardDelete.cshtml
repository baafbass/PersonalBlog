@model PersonalBlog.Entities.Dtos.CommentsDtos.CommentDto

@{
    ViewBag.Title = "List of Comments";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Comment">List Of Comments</a></li>
    <li class="breadcrumb-item">Delete Comments</li>
</ol>
<hr />
<h2 class="text-center">Delete Comments</h2>
<div>
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.Comments.FirstName</dd>

        <dt>Last Name</dt>
        <dd>@Model.Comments.LastName</dd>

        <dt>Text</dt>
        <dd>@Model.Comments.Text</dd>

        <dt>Comment's article</dt>
        <dd>@Model.Comments.Article.Title</dd>

        <dt>Is Deleted?</dt>
        <dd>@Model.Comments.IsDeleted</dd>

        <dt>Is Active?</dt>
        <dd>@Model.Comments.IsActive</dd>

        <dt>Created Time</dt>
        <dd>@Model.Comments.CreatedTime</dd>

        <dt>Created By</dt>
        <dd>@Model.Comments.CreatedByName</dd>

        <dt>Modified Time</dt>
        <dd>@Model.Comments.ModifiedTime</dd>

        <dt>Modified By</dt>
        <dd>@Model.Comments.ModifiedByName</dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="DoHardDelete" asp-controller="Comments" asp-area="Admin" asp-route-id="@Model.Comments.ID" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete </a>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Comments" asp-area="Admin"><i class="fas fa-undo"></i> Return</a>
</div>