@model PersonalBlog.Entities.Dtos.SummaryDtos.SummaryUpdateDto

@{
    ViewBag.Title = "Update Summary";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Summary">Summary</a></li>
    <li class="breadcrumb-item">Update Summary</li>
</ol>
<hr />
<h2 class="text-center">Update Summary</h2>
<form method="post" asp-action="Edit">
    <input hidden asp-for="ID" />
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <input hidden asp-for="IsActive" type="checkbox" />
    <input hidden asp-for="IsDeleted" type="checkbox" />
    <div class="form-group">
        <div class="offset-lg-1">
            <button class="btn btn-success" type="submit"><i class="far fa-save"></i> Update</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-warning"><i class="fas fa-undo"></i> Return</a>
