@model PersonalBlog.Entities.Dtos.SkillsDtos.SkillsUpdateDto

@{
    ViewBag.Title = "Update Skills";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Skill">Update Skills</a></li>
    <li class="breadcrumb-item">Update Skills</li>
</ol>
<hr />
<h2 class="text-center">Update Skills</h2>
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="SkillName"></label>
        <input class="form-control" asp-for="SkillName" />
        <span class="text-danger" asp-validation-for="SkillName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input class="form-control" asp-for="Percentage" />
        <span class="text-danger" asp-validation-for="Percentage"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input type="checkbox" class="form-check" asp-for="IsActive" />
        <span class="text-danger" asp-validation-for="IsActive"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input type="checkbox" class="form-check" asp-for="IsDeleted" />
        <span class="text-danger" asp-validation-for="IsDeleted"></span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Update</button>
        </div>
    </div>
</form>
<a asp-area="Admin" asp-controller="Skills" asp-action="Index" class="btn btn-warning"><i class="fas fa-angle-double-left"></i> Return</a>
