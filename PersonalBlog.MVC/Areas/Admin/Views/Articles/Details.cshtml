@model PersonalBlog.Entities.Dtos.ArticlesDtos.ArticleDto

@{
    ViewBag.Title = "Article Details";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Articles">List of Articles</a></li>
    <li class="breadcrumb-item">Article Details </li>
</ol>
<hr />

<h2 class="text-center">Article Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Article's Title</dt>
        <dd>@Model.Articles.Title</dd>

        <dt>Article's Icon</dt>
        <dd>
            <img src="@Model.Articles.Thumbnail" alt="@Model.Articles.Title" class="img-fluid img-thumbnail w-50" />
        </dd>

        <dt>Overview</dt>
        <dd>@Model.Articles.Overview</dd>

        <dt>Number of reads</dt>
        <dd>@Model.Articles.Views</dd>

        <dt>Number of comments</dt>
        <dd>@Model.Articles.Comments.Count</dd>

        <dt>Article's Category</dt>
        <dd>@Html.Raw(Model.Articles.Categories.CategoryImg) @Model.Articles.Categories.Name</dd>

        <dt>Seo Tags</dt>
        <dd>@Model.Articles.SeoTags</dd>

        <dt>Seo Description</dt>
        <dd>@Model.Articles.SeoDescription</dd>

        <dt>Is Deleted?</dt>
        <dd>@Model.Articles.IsDeleted</dd>

        <dt>Is Active?</dt>
        <dd>@Model.Articles.IsActive</dd>

        <dt>Created Time</dt>
        <dd>@Model.Articles.CreatedTime</dd>

        <dt>Created By</dt>
        <dd>@Model.Articles.CreatedByName</dd>

        <dt>Modified Time</dt>
        <dd>@Model.Articles.ModifiedTime</dd>

        <dt>Modified By</dt>
        <dd>@Model.Articles.ModifiedByName</dd>

        <dt>Article's Content</dt>
        <dd class="border">@Html.Raw(Model.Articles.Content)</dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="Edit" asp-controller="Articles" asp-area="Admin" asp-route-id="@Model.Articles.ID" class="btn btn-primary"><i class="fas fa-edit"></i> Modify</a>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Articles" asp-area="Admin"><i class="fas fa-info-circle"></i> Return</a>
</div>