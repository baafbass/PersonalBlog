@model PersonalBlog.Entities.Dtos.SlidersDtos.SlidersListDto

@{
    ViewBag.Title = "Sliders";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item">Sliders</li>
</ol>
<hr />
@if (Model.ResultStatus == ResultStatus.Success)
{
    <h2 class="text-center">Sliders</h2>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Slider&nbsp; <a asp-action="Add" class="btn btn-success"><i class="fas fa-plus"></i> Add Slider</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="myDataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Short Content</th>
                            <th>Content</th>
                            <th>Is Deleted?</th>
                            <th>Is Active?</th>
                            <th>Created Time</th>
                            <th>Created By</th>
                            <th>Modified Time</th>
                            <th>Modified By</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tfoot class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Short Content</th>
                            <th>Content</th>
                            <th>Is Deleted?</th>
                            <th>Is Active?</th>
                            <th>Created Time</th>
                            <th>Created By</th>
                            <th>Modified Time</th>
                            <th>Modified By</th>
                            <th>Operation</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Sliders)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.ShortContent</td>
                                <td>Go to details to see more...</td>
                                <td>@item.IsDeleted</td>
                                <td>@item.IsActive</td>
                                <td>@item.CreatedTime.ToShortDateString()</td>
                                <td>@item.CreatedByName</td>
                                <td>@item.ModifiedTime.ToShortDateString()</td>
                                <td>@item.ModifiedByName</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a class="btn btn-primary" asp-area="Admin" asp-controller="HomePageSliders" asp-action="Edit" asp-route-id="@item.ID" title="Update"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-secondary" asp-area="Admin" asp-controller="HomePageSliders" asp-action="Details" asp-route-id="@item.ID" title="Examine Details"><i class="fas fa-info-circle"></i></a>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="HomePageSliders" asp-action="HardDelete" asp-route-id="@item.ID" title="Delete From the database"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
