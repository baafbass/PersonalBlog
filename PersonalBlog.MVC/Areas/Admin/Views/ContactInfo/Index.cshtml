@model PersonalBlog.Entities.Dtos.ContactInfoDtos.ContactInfoDto



@{
    ViewBag.Title = "Contact Info";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item">Contact Info</li>
</ol>
<hr />
@if (Model.ResultStatus == ResultStatus.Success)
{
    <h2 class="text-center">Contact Info</h2>
    <table class="table table-responsive table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Phone Number</th>
                <th>E-Mail</th>
                <th>City</th>
                <th>Adress</th>
                <th>Created Time</th>
                <th>Created By</th>
                <th>Modified Time</th>
                <th>Modified By</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tfoot class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Phone Number</th>
                <th>E-Mail</th>
                <th>City</th>
                <th>Adress</th>
                <th>Created Time</th>
                <th>Created By</th>
                <th>Modified Time</th>
                <th>Modified By</th>
                <th>Operation</th>
            </tr>
        </tfoot>
        <tbody>
            <tr>
                <td>@Model.ContactInfo.ID</td>
                <td>@Model.ContactInfo.phoneNumber</td>
                <td>@Model.ContactInfo.Email</td>
                <td>@Model.ContactInfo.City</td>
                <td>@Model.ContactInfo.Adress</td>
                <td>@Model.ContactInfo.CreatedTime.ToShortDateString()</td>
                <td>@Model.ContactInfo.CreatedByName</td>
                <td>@Model.ContactInfo.ModifiedTime.ToShortDateString()</td>
                <td>@Model.ContactInfo.ModifiedByName</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="ContactInfo" asp-action="Edit" asp-route-id="@Model.ContactInfo.ID" title="Update"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
}
