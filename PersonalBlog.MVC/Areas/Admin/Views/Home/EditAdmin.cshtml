@model PersonalBlog.Entities.Dtos.AdminDtos.AdminUpdateDto

@{
    ViewBag.Title = "Update Admin Informations";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-action="Index">Settings</a></li>
    <li class="breadcrumb-item">Update Admin Informations</li>
</ol>
<hr />
<h2 class="text-center">Update Admin Informations</h2>
<form method="post" asp-action="EditAdmin">
    <input hidden asp-for="ID" />
    <input hidden value="@Model.PasswordHash" name="oldPsswrd" />
    <input hidden value="@Model.SQAnswers" name="oldSQHash" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SecurityQuestions"></label>
        <input asp-for="SecurityQuestions" class="form-control" />
        <span asp-validation-for="SecurityQuestions" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SQAnswers"></label>
        <input asp-for="SQAnswers" class="form-control" />
        <span asp-validation-for="SQAnswers" class="text-danger"></span>
    </div>
    <input hidden asp-for="IsActive" type="checkbox" checked />
    <input hidden asp-for="IsDeleted" type="checkbox" />

    <div class="form-group">
        <div class="offset-lg-1">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i>Update</button>
        </div>
    </div>
</form>
<a asp-action="Setting" class="btn btn-danger"><i class="fas fa-undo"></i> Return</a>
<br />
@ViewBag.psHash
