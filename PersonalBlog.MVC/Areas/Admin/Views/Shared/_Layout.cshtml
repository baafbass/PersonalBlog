<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title> @ViewBag.Title | Admin | Blog</title>
    <link rel="icon" href="~/AdminDoc/img/admin-ico.ico" type="image/x-icon" />
    @await Html.PartialAsync("_LayoutCssPartial");
    @await RenderSectionAsync("Styles", false);
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Management Panel</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" asp-controller="Home" asp-area="Admin" asp-action="Setting">Settings</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="LogOut">Log Out</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Menü</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-house-user"></i></div>
                            Admin
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Site" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-address-card"></i></div>
                            Site Identity
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Skills" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard-list"></i></div>
                            My Skills
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="HomePageSliders" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-images"></i></div>
                            Slider
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="ContactMe" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-comments"></i></div>
                            Message
                        </a>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseAbout" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-comment-alt"></i></div>
                            About Me
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseAbout" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="AboutMe" asp-action="Index"><i class="fas fa-comment-alt"></i>&nbsp; About Me</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Education" asp-action="Index"><i class="fas fa-user-graduate"></i>&nbsp; Education</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Experiences" asp-action="Index"><i class="fas fa-globe"></i>&nbsp; Experience</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Summary" asp-action="Index"><i class="fas fa-align-center"></i>&nbsp; Summary</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Hobbies" asp-action="Index"><i class="fas fa-running"></i>&nbsp; Hobbies</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseArticle" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-photo-video"></i></div>
                            Article
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseArticle" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="Articles" asp-action="Index"><i class="fas fa-photo-video"></i>&nbsp; Articles</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index"><i class="fas fa-th-list"></i>&nbsp; Categories</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Comments" asp-action="Index"><i class="fas fa-comment-dots"></i>&nbsp; Comments</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseContact" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-phone-square"></i></div>
                            Contact Info
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseContact" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="SocialMedias" asp-action="Index"><i class="fab fa-linkedin-in"></i>&nbsp; Social Media</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="ContactInfo" asp-action="Index"><i class="fas fa-phone-square"></i>&nbsp; contact Info</a>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="sb-sidenav-footer text-center">
                    Abdoul Faride Bassirou Alzouma
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-2">Management Panel</h1>
                    <hr />
@RenderBody()
</div>
</main>
<footer class="py-4 bg-light mt-auto">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; @DateTime.Now.Year</div>

        </div>
    </div>
</footer>
</div>
</div>
@await Html.PartialAsync("_LayoutJsPartial");
@await RenderSectionAsync("Scripts", false);
</body>
</html>
