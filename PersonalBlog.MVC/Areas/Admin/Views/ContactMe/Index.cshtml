@model PersonalBlog.Entities.Dtos.ContactMeDtos.ContactMeListDto


@{
    ViewBag.Title = "Messages";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item">Messages</li>
</ol>
<hr />
@if (Model.ResultStatus == ResultStatus.Success)
{
    <h2 class="text-center">Messages</h2>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Messages
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="myDataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>E-Mail</th>
                            <th>Subject</th>
                            <th>Messages</th>
                            <th>Is Deleted?</th>
                            <th>Is Active?</th>
                            <th>Created Time</th>
                            <th>Created By</th>
                            <th>Modified Time</th>
                            <th>Modified By</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tfoot class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>E-Mail</th>
                            <th>Subject</th>
                            <th>Messages</th>
                            <th>Is Deleted?</th>
                            <th>Is Active?</th>
                            <th>Created Time</th>
                            <th>Created By</th>
                            <th>Modified Time</th>
                            <th>Modified By</th>
                            <th>Operation</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.ContactMe)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.EmailAdress</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td>
                                <td>@item.IsDeleted</td>
                                <td>@item.IsActive</td>
                                <td>@item.CreatedTime.ToShortDateString()</td>
                                <td>@item.CreatedByName</td>
                                <td>@item.ModifiedTime.ToShortDateString()</td>
                                <td>@item.ModifiedByName</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a class="btn btn-primary" asp-area="Admin" asp-controller="ContactMe" asp-action="Checked" asp-route-id="@item.ID" title="Mark as Read"><i class="fas fa-check-square"></i></a>
                                        <a class="btn btn-secondary" href="mailto:@item.EmailAdress" title="Mail At"><i class="fas fa-paper-plane"></i></a>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="ContactMe" asp-action="HardDelete" asp-route-id="@item.ID" title="Delete From DataBase"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
