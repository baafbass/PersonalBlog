@model PersonalBlog.Entities.Dtos.SiteDtos.SiteUpdateDto

@{
    ViewBag.Title = "Update Site Identity";
    Layout = "_Layout";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Site">Site Identity</a></li>
    <li class="breadcrumb-item">Update Site Identity</li>
</ol>
<hr />
<h2 class="text-center">Update Site Identity</h2>
<form method="post" class="" asp-controller="Site" asp-area="Admin" asp-action="Edit">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="siteName"></label>
        <input class="form-control" asp-for="siteName" />
        <span asp-validation-for="siteName"></span>
    </div>
    <div class="form-group">
        <label asp-for="siteKeywords"></label>
        <input class="form-control" asp-for="siteKeywords" />
        <span asp-validation-for="siteKeywords"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Logo"></label>&nbsp;@Html.Raw(Model.Logo)
        <input class="form-control" asp-for="Logo" />
        <span asp-validation-for="Logo"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoTitle"></label>
        <input class="form-control" asp-for="LogoTitle" />
        <span asp-validation-for="LogoTitle"></span>
    </div>
    <input hidden type="checkbox" asp-for="IsActive" />
    <input hidden type="checkbox" asp-for="IsDeleted" />
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Update</button>
        </div>
    </div>
</form>
<a asp-area="Admin" asp-controller="Site" asp-action="Index" class="btn btn-warning"><i class="fas fa-angle-double-left"></i> Return</a>
