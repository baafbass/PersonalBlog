@model PersonalBlog.Entities.Dtos.HobbiesDtos.HobbiesListDtos

@{
    ViewBag.Title = "Hobbies";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item">Hobbies</li>
</ol>
<hr />

@if (Model.ResultStatus == ResultStatus.Success)
{
    <h2 class="text-center">Hobbies</h2>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Hobbies&nbsp; <a asp-action="Add" class="btn btn-success"><i class="fas fa-plus"></i> Add Hobby</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="myDataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Hobby</th>
                            <th>Is Active?</th>
                            <th>Is Deleted?</th>
                            <th>Created Time</th>
                            <th>Created By</th>
                            <th>Modified Time</th>
                            <th>Modified By</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tfoot class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Hobby</th>
                            <th>Is Active?</th>
                            <th>Is Deleted?</th>
                            <th>Created Time</th>
                            <th>Created By</th>
                            <th>Modified Time</th>
                            <th>Modified By</th>
                            <th>Operation</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Hobbies)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.hobbies</td>
                                <td>@item.IsDeleted</td>
                                <td>@item.IsActive</td>
                                <td>@item.CreatedTime.ToShortDateString()</td>
                                <td>@item.CreatedByName</td>
                                <td>@item.ModifiedTime.ToShortDateString()</td>
                                <td>@item.ModifiedByName</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Hobbies" asp-action="Edit" asp-route-id="@item.ID" title="Update"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Hobbies" asp-action="HardDelete" asp-route-id="@item.ID" title="Delete from Database"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
