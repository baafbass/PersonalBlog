@model PersonalBlog.Entities.Dtos.ArticlesDtos.ArticlesUpdateDto


@{
    ViewBag.Title = "Update Article";

}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Articles">List of Articles</a></li>
    <li class="breadcrumb-item">Update Article</li>
</ol>
<hr />
<h2 class="text-center">Update Article's Informations</h2>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input hidden asp-for="ID" />
    <input hidden asp-for="Thumbnail" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Overview"></label>
        <textarea asp-for="Overview" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Overview" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Thumbnail">Article Icon (Please select a 16:9 format Icon.)</label>
        <div><img src="@Model.Thumbnail" class="img-fluid img-thumbnail w-50" alt="Alternate Text" /></div>
        <input type="file" name="fileImg" class="form-control-file" />
        <span class="text-danger" asp-validation-for="Thumbnail"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(@ViewBag.CategoryList,"Id","Name"))">
            <option>Please select the Category...</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeoTags"></label>
        <input asp-for="SeoTags" class="form-control" />
        <span asp-validation-for="SeoTags" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeoDescription"></label>
        <input asp-for="SeoDescription" class="form-control" />
        <span asp-validation-for="SeoDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input type="checkbox" asp-for="IsActive" class="form-check" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input asp-for="IsDeleted" type="checkbox" class="form-check" />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" id="editor" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="offset-lg-1">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Update</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-danger"><i class="fas fa-undo"></i> Return</a>

@section Scripts{


}
