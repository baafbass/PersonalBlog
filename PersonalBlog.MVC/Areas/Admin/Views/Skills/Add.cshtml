@model PersonalBlog.Entities.Dtos.SkillsDtos.SkillsAddDto

@{
    ViewBag.Title = "Add Skill";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Skills">Skills</a></li>
    <li class="breadcrumb-item">Add Skill</li>
</ol>
<hr />
<h2 class="text-center">Add new Skill</h2>
<form method="post" asp-action="Add">
    <div class="form-group">
        <label asp-for="SkillName"></label>
        <input asp-for="SkillName" class="form-control" />
        <span asp-validation-for="SkillName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input asp-for="Percentage" class="form-control" />
        <span class="text-danger" asp-validation-for="Percentage"></span>
    </div>
    <div class="form-group">
        <div class="col-lg-11 offset-lg-1">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Add</button>
        </div>
    </div>
</form>
<a asp-area="Admin" asp-controller="Skills" asp-action="Index" class="btn btn-warning"><i class="fas fa-angle-double-left"></i> Return</a>