@model PersonalBlog.Entities.Dtos.SocialMediasDtos.SocialMediasUpdateDto

@{
    ViewBag.Title = "Edit Social Media Account";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="SocialMedias">Edit Social Media Account</a></li>
    <li class="breadcrumb-item">Edit Social Media Account</li>
</ol>
<hr />

<form method="Post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="MediaName"></label>
        <input asp-for="MediaName" class="form-control" />
        <span asp-validation-for="MediaName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MediaLogo"></label>
        <input asp-for="MediaLogo" class="form-control" />
        <span asp-validation-for="MediaLogo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MediaURL"></label>
        <input asp-for="MediaURL" class="form-control" />
        <span asp-validation-for="MediaURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input asp-for="IsActive" type="checkbox" class="form-check" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input asp-for="IsDeleted" type="checkbox" class="form-check" />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="offset-lg-1">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Update</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-danger"><i class="fas fa-undo"></i> Return</a>